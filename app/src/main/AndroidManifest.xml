<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iiuifyp.location.base.attendance">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.LOCATIONBASEDATTENDANCE">
        <activity android:name=".EmployeeHomeActivity"></activity>
        <activity android:name=".AskQueryActivity" />
        <activity android:name=".AskNewQueryActivity" />
        <activity android:name=".ManageTimetableActivity" />
        <activity android:name=".ViewAllEmployeeActivity" />
        <activity android:name=".SelectedQueriesActivity" />
        <activity android:name=".ManageReportsActivity" />
        <activity android:name=".ManageQueriesActivity" />
        <activity android:name=".ManageLeavesActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".CategoryActivity" />
        <activity android:name=".AddTimtableActivity" />
        <activity android:name=".AdminHomePageActivity" />
        <activity android:name=".AddEmployeeActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.user.myapplication.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_path" />
        </provider>
    </application>

</manifest>